# Database
# DATABASE_URL=sqlite:////app/database_volume_data/app.db  # 4 barras para ruta absoluta en Docker
# In your .env file or configuration:
DATABASE_URL=sqlite:///./database_volume_data/app.db
# Auth
SECRET_KEY=YOUR_SECRET_KEY_HERE # Generate a strong one, e.g., using: openssl rand -hex 32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Whisper
WHISPER_MODEL_SIZE=base
WHISPER_FP16=False

# Docker user permissions
UID=1000  # Reemplaza con tu id de usuario (ejecuta 'id -u' en terminal)
GID=1000  # Reemplaza con tu id de grupo (ejecuta 'id -g' en terminal)